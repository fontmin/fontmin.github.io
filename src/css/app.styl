
@require "fullpage/jquery.fullpage.css"
@require "zoomIn"
@require "zoomOut"

$-page-main-color = #3C5098
$-page-fill-color = #E4CAA3

html,
body
    font-size: $-base-font-size

h1,
h2
    font-style: normal
    font-weight: normal

#loading
    absolute: 0 0 0 0
    z-index: 10
    text-align: center
    visibility: visible
    clearfix()
    &.load-end
        visibility: hidden

.load-spinner
    $box-size = 256px
    absolute: 50% _ _ 50%
    size: em($box-size) em($box-size)
    margin: em(-($box-size / 2)) _ _ em(-($box-size / 2))

.load-left,
.load-right
    background: #fff
    width: 50%
    height: 100%
    transition: all .5s ease

.load-left
    float: left
.load-right
    float: right

.load-end
    .load-left
        animate('slideOutLeft', .5s)
    .load-right
        animate('slideOutRight', .5s)
    .load-spinner
        animation-name: zoomOut
        animation-duration: .5s

.section
    text-align: center
    a
        color: $-page-main-color
        text-decoration: none
    h1
        font-size: 2em
        line-height: 1.5

    h2
        font-size: 1.6em
        line-height: 1.5

    &.active
        .section-title
            animate('slideInDown', .5s)

.section-title
    $box-width = 176px
    $box-height = 70px
    absolute: 0 50% _ 50%
    size: $box-width $box-height
    margin-left: -($box-width / 2)
    overflow: hidden

        h1
            position: absolute
            margin: 0
            width: $box-width
            text-align: center
            font-size: em(30)
            line-height: em(30)
            color: #000

        .bg
            absolute: ($box-height - $box-width) _ _ _
            size: $box-width $box-width
            background: $-page-fill-color
            border-radius: px($box-width / 2)

.banner
    h1
        color: $-page-fill-color
    h2
        color: #fff

    &.load-end,
    &.active
        .logo
            animation-name: zoomIn
            animation-duration: 1s

.menu
    a
        color: $-page-fill-color
        margin-left: em(16)
        &:first-child
            margin-left: 0
        &:hover
            color: rgba($-page-fill-color, 0.5)

.feature
    clearfix()

    .arrow
        absolute: 50% _ _ 50%
        $arrow-width = 22px
        $arrow-height = 42px
        width: $arrow-width
        height: $arrow-height
        margin-left: -($arrow-width / 2)
        margin-top: -($arrow-height)
        i
            triangle right $arrow-height #888
            absolute: 0 10px 0 0
        em
            triangle right $arrow-height #fff
            absolute: 0 0 0 -4px

    &.active
        .feature-left,
        .feature-right,
        .arrow
            animate('slideInLeft', .5s)

        .arrow
            animation-delay: .5s

        .feature-right
            animation-delay: 1s

        .font-info
            animation-delay: 1.5s
            animate('slideInUp', .5s)

        .tags
            animation-delay: 2s
            animate('slideInUp', .5s)


.feature-left,
.feature-right
    width: 50%

.feature-left
    float: left

.feature-right
    float: right

.font-body
    text-align: left
    width: 260px
    margin: 0 auto

.font-chars
    font-size: em(32)

.font-meta
    color: #999999
    font-size: em(12)

.font-name
    font-size: em(16)
    color: #94764A

.tags
    img
        margin: 0 em(4) em(4) 0

.usage
    pre
        text-align: left
        width: em(600)
        margin: 0 auto
        padding: em(16)
        background: rgba($-page-fill-color, 0.3)

.terminal
    i,
    em
        font-style: normal
    i
        color: $-page-fill-color
    em
        background: rgba($-page-fill-color, 0.5)
        padding: em(2) em(4)

.app
    img
        display: block
        margin: em(32) auto

    .down-btn
        display: inline-block
        padding: em((39 - 16) / 2) em(16)
        margin: em(16)
        background: $-page-main-color
        color: #fff

.github
    margin: em(64) 0 0 0
    font-size: em(30)
    display: block

.star
.thanks,
.links,
.copyright
    color: #AAAAAA
    margin: em(16) 0

.star
    margin: em(64) 0 em(32) 0
    .star-btn
        vertical-align: middle
